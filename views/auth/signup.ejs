<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/nav.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/signup" method="POST" novalidate>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                    id="email" 
                    type="email" 
                    name="email" 
                    value="<%= oldInput ? oldInput.email : '' %>"
                    class="<%= validationErrors.find(err => err.param === 'email') ? 'invalid' : ''%>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    id="password" 
                    type="password" 
                    name="password" 
                    value="<%= oldInput ? oldInput.password : '' %>"
                    class="<%= validationErrors.find(err => err.param === 'password') ? 'invalid' : ''%>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                    id="confirmPassword"   
                    type="password" 
                    name="confirmPassword" 
                    value="<%= oldInput ? oldInput.confirmPassword : '' %>"
                    class="<%= validationErrors.find(err => err.param === 'confirmPassword') ? 'invalid' : ''%>">
            </div>
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>